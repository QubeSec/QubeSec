# OpenSSL configuration file with oqs-provider
# This replaces the default system openssl.cnf to load the oqsprovider module.

openssl_conf = openssl_init

[openssl_init]
providers = provider_sect
alg_section = algorithm_sect

[provider_sect]
default = default_sect
oqsprovider = oqs_provider_sect

[default_sect]
activate = 1

[oqs_provider_sect]
activate = 1
module = {{ openssl_prefix }}/lib64/ossl-modules/oqsprovider.so
# Default groups for KEM
default_groups = {{ default_groups }}

[algorithm_sect]
# Prefer oqs provider for key exchange
kem = oqs_kem

[oqs_kem]
use = oqsprovider
